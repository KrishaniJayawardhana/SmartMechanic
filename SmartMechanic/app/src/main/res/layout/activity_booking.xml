<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="420dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/checkMy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Vehicle"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="188dp" />


            <Spinner
                android:id="@+id/vtype3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/v_types" />

            <EditText
                android:id="@+id/model3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Vehicle model"
                android:inputType="text" />

            <EditText
                android:id="@+id/vnumber3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Vehicle Number"
                android:inputType="text" />

            <EditText
                android:id="@+id/description1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Description"
                android:inputType="text" />

            <EditText
                android:id="@+id/aphone1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Phone Number (alternative)"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/checkRepair1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repair on the spot"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="188dp" />


            <Button
                android:id="@+id/location1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location" />

            <Button
                android:id="@+id/photos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textSize="14sp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancel1"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/proceed1"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="156dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="proceed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>